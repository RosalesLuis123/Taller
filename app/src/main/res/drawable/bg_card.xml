<!-- res/drawable/bg_card.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa de sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#22000000"/> <!-- Color de sombra (transparente) -->
            <corners android:radius="12dp"/> <!-- Esquinas redondeadas -->
        </shape>
    </item>

    <!-- Capa principal -->
    <item android:top="2dp" android:left="2dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_text_2"/> <!-- Color de fondo -->
            <corners android:radius="12dp"/> <!-- Esquinas redondeadas -->
        </shape>
    </item>
</layer-list>

