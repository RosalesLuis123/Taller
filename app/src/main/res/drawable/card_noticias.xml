<!-- sombra_borde.xml en res/drawable -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra desvanecida -->
    <item android:right="12dp" android:left="6dp" android:top="2dp" android:bottom="12dp">
        <shape>
            <solid android:color="#F44336"/> <!-- Sombra mÃ¡s opaca -->
            <corners android:radius="12dp"/> <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Fondo blanco con borde gris -->
    <item>
        <shape>
            <solid android:color="@color/white"/> <!-- Fondo blanco -->
            <corners android:radius="12dp"/> <!-- Bordes redondeados de 12dp -->
            <stroke
                android:color="@color/white"
                android:width="2dp"/> <!-- Grosor del borde -->
        </shape>
    </item>
</layer-list>
