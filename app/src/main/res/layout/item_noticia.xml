<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="25dp"
    android:gravity="center"
    android:layout_margin="16dp"
    android:background="@drawable/card_noticias"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/news_image"
        android:background="@drawable/rounded_img_noticias"
        android:clipToPadding="true"
        android:clipToOutline="true" /> <!-- Clip to outline for rounded corners -->

    <TextView
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:text="21 marzo 2024 horas 21:52 PM"
        android:textColor="@color/color_text_1"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_margin="16dp"
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_margin="16dp"
        android:id="@+id/descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/darker_gray"
        android:maxLines="2"
        android:textSize="14sp"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/favoriteButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_star_outline_24"
            android:contentDescription="Favorito"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/verMasButton"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:text="Ver mas"
            android:textSize="12dp"
            android:textColor="@color/color_primario_0"
            app:cornerRadius="8dp"
            app:strokeColor="@color/color_primario_0"
            app:strokeWidth="2dp"
            app:icon="@drawable/baseline_navigate_next_24"
            app:backgroundTint="@color/white"
            app:iconTint="@color/color_primario_0"
            app:iconGravity="textEnd"
            app:iconSize="16dp"
            />

    </RelativeLayout>

</LinearLayout>
